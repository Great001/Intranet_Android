<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar" />-->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:actionBarSize">@dimen/toolbar_height</item>
        <item name="actionBarSize">@dimen/toolbar_height</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorAccent">@color/APP_GRAY</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="android:alertDialogStyle">@style/AlertDialogStyle</item>
    </style>


    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorAccent">@color/APP_GREEN</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/APP_GREEN</item>
    </style>

    <style name="TKGZDialogTheme" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/APP_GREEN</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TKGZActionBarMenuTextStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:textColor">@color/APP_GREEN</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dot_style">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_marginLeft">1.5dp</item>
        <item name="android:layout_marginRight">1.5dp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/message_title_selector_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/CustomTabText</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/message_title_non_current_color</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:actionBarSize">@dimen/toolbar_height</item>
        <item name="actionBarSize">@dimen/toolbar_height</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_gain_integral_shape</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>