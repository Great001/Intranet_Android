<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/c_about_theknot_bg"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:hint="@string/txt_search_employee"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColorHint="@color/c_line_color"
        android:textSize="14sp" />

    <include layout="@layout/line_divider_grey" />

    <ListView
        android:id="@+id/lv_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/c_line_color"
        android:dividerHeight="0.3dp"
        android:scrollbars="none" />
</LinearLayout>