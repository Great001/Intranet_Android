<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <com.xogrp.tkgz.View.CircleImageView
            android:id="@+id/iv_photos"
            android:layout_width="@dimen/photo_wall_big_circleImageView_width"
            android:layout_height="@dimen/photo_wall_big_circleImageView_height"
            android:layout_centerInParent="true"
            android:src="@drawable/header_nophoto" />

        <com.xogrp.tkgz.View.CircleImageView
            android:id="@+id/iv_photos_shadow"
            android:layout_width="@dimen/photo_wall_big_circleImageView_width"
            android:layout_height="@dimen/photo_wall_big_circleImageView_height"
            android:layout_centerInParent="true"
            android:src="@drawable/header_shadow" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_photos"
            android:src="@drawable/icon_star96"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_photos"
            android:src="@drawable/icon_teamleader"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_employee_name"
            android:layout_width="@dimen/photo_wall_big_circleImageView_width"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_photos"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/c_line_color"
            android:textSize="@dimen/photo_wall_big_tv_employee_name_text_size" />
    </RelativeLayout>


</RelativeLayout>