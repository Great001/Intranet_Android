<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_calendar_item"
    android:layout_width="@dimen/rl_calendar_view_item_width"
    android:layout_height="@dimen/rl_calendar_view_item_height">

    <TextView
        android:id="@+id/tv_calendar_text"
        android:layout_width="@dimen/tv_calendar_view_item_width"
        android:layout_height="@dimen/tv_calendar_view_item_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/calendar_header_text_view_text_size" />

    <LinearLayout
        android:layout_width="@dimen/ll_calendar_header_event_status_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0.5dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_able_sign_up"
            android:layout_width="@dimen/iv_calendar_view_item_width"
            android:layout_height="@dimen/iv_calendar_view_item_height"
            android:background="@drawable/calendar_green"
            android:visibility="gone" />

        <View
            android:id="@+id/v_blank"
            android:layout_width="@dimen/iv_calendar_view_item_width"
            android:layout_height="@dimen/iv_calendar_view_item_height"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_event_ongoing"
            android:layout_width="@dimen/iv_calendar_view_item_width"
            android:layout_height="@dimen/iv_calendar_view_item_height"
            android:background="@drawable/calendar_orange"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>