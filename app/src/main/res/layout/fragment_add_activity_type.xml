<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_marginRight="@dimen/tv_create_activity_padding_right"
         android:layout_marginLeft="@dimen/tv_create_activity_padding_left"
         android:hint="@string/input_activity_type"
         android:id="@+id/edt_input_activity_type"
         android:textSize="@dimen/edt_create_activity_text_size"
         android:singleLine="true"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/tv_keep_activity_type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#547743"
            android:text="@string/keep"
            android:layout_below="@+id/edt_input_activity_type"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/btn_cancel_activity_type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#547743"
            android:text="@string/cancel"
            android:layout_below="@+id/edt_input_activity_type"
            android:layout_alignRight="@+id/edt_input_activity_type"
            android:layout_alignEnd="@+id/edt_input_activity_type" />

</RelativeLayout>