<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/white" >

    <com.xogrp.tkgz.View.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:src="@drawable/header_big_sample" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_personnel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_personnel_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_personnel_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/c_line_color"
                android:layout_marginRight="24dp" />

            <TextView
                android:id="@+id/tv_personnel_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:drawableLeft="@drawable/ic_call_phone"
                android:textColor="@color/c_line_color" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/c_line_color"
        android:src="@drawable/icon_arrow_right"
        android:layout_alignParentRight="true"
        android:gravity="center"/>


</RelativeLayout>
