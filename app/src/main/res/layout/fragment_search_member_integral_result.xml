<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_my_rank_color">

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/icon_metal1"
        android:gravity="center_vertical|left"
        android:textColor="@color/APP_GREEN"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_member_name"
        android:layout_below="@+id/tv_member_name"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/icon_time"
        android:gravity="center_vertical"
        android:minWidth="40dp"
        android:textColor="@color/APP_GRAY"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_member_name"
        android:layout_below="@+id/tv_member_name"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:minWidth="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_integral"
        android:layout_toLeftOf="@+id/tv_integral"
        android:text="积分："
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16" />

    <include
        android:id="@+id/line"
        layout="@layout/line_divider_grey"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/lv_result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:background="@color/white" />

</RelativeLayout>

