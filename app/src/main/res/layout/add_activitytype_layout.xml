<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <EditText
        android:id="@+id/et_actType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:hint="@string/please"
        android:textColor="#888888"
        android:textSize="@dimen/btn_login_text_size"
        android:maxLines="5"
        android:inputType="textMultiLine"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_type_wordCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="@dimen/btn_login_text_size"
            />

        <TextView
            android:id="@+id/tv_type_wordSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/50"
            android:textSize="@dimen/btn_login_text_size"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
      >
        <Button
            android:id="@+id/btn_type_save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/btn_login_color"
            android:textSize="@dimen/btn_login_text_size"
            android:background="@drawable/btn_green_style"
            />

        <Button
            android:id="@+id/btn_type_cancle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="@string/txt_btn_cancel"
            android:textColor="@color/btn_login_color"
            android:textSize="@dimen/btn_login_text_size"
            android:background="@drawable/btn_green_style"
            />
        </LinearLayout>

</LinearLayout>