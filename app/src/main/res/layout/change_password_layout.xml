<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/message_change_password"
            android:gravity="center_vertical"
            android:textSize="@dimen/lable_tip_text_size"
            android:textColor="@color/label_tip_color"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_old_password"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="@color/et_username_color"
            android:typeface="normal"
            android:textSize="@dimen/et_username_text_size"
            android:inputType="textPassword"
            android:hint="@string/hint_old_password" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="@color/et_username_color"
            android:typeface="normal"
            android:textSize="@dimen/et_pwd_text_size"
            android:inputType="textPassword"
            android:hint="@string/hint_new_password" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_repeat_new_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_repeat_new_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="@color/et_username_color"
            android:typeface="normal"
            android:imeOptions="actionDone"
            android:textSize="@dimen/et_pwd_text_size"
            android:inputType="textPassword"
            android:hint="@string/hint_repeat_password" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_amend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:typeface="normal"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape"
            android:text="@string/btn_change_password_txt"
            android:textSize="@dimen/btn_login_text_size"
            android:textColor="@color/btn_login_color"/>

    </LinearLayout>


</RelativeLayout>