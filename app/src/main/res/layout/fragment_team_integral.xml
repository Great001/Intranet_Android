<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:includeFontPadding="false"
        android:textColor="@color/APP_GREEN"
        android:textSize="@dimen/font_size_20" />

    <TextView
        android:id="@+id/tv_member_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_member_amount"
        android:layout_toLeftOf="@+id/tv_member_amount"
        android:text="@string/team_integral_member_amount_text"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_member_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_team_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_team_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:text="2012-12-11  2014-11-10"
        android:drawableLeft="@drawable/icon_time"
        android:drawablePadding="4dp"
        android:includeFontPadding="false"
        android:textSize="@dimen/font_size_14" />

    <LinearLayout
        android:id="@+id/ll_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_metal1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/tv_the_first_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_level_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_metal2"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/tv_the_second_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_level_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_container1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_metal3"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/tv_the_third_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_level_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_metal4"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/tv_the_fourth_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_level_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_container3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_container2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_metal5"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/tv_the_fifth_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_level_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:minWidth="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/ll_container3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="left|center"
        android:text="@string/tv_team_detail_title"
        android:textColor="@color/tv_detail_title_text_color"
        android:textSize="@dimen/tv_detail_text_size" />

    <ListView
        android:id="@+id/lv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_detail_title"
        android:divider="@color/c_line_color"
        android:dividerHeight="0.5dp" />
</RelativeLayout>

