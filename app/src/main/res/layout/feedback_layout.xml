<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/message_send_to"
                android:textColor="@color/label_tip_color"
                android:textSize="@dimen/et_username_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:gravity="center_vertical"
                android:text="@string/message_the_knot"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_info_text_size" />

        </LinearLayout>

        <include layout="@layout/line_divider_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/message_send_name"
                android:textColor="@color/label_tip_color"
                android:textSize="@dimen/et_username_text_size" />

            <EditText
                android:id="@+id/et_send_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/hint_send_name"
                android:textColorHint="@color/et_username_color"
                android:textSize="@dimen/dialog_info_text_size" />

        </LinearLayout>

        <include layout="@layout/line_divider_grey" />

        <EditText
            android:id="@+id/et_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/hint_send_message"
            android:minLines="6"
            android:textColorHint="@color/et_username_color"
            android:textSize="@dimen/dialog_info_text_size" />

        <include layout="@layout/line_divider_grey" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/message_send_button"
            android:textColor="@color/btn_login_color"
            android:textSize="@dimen/btn_login_text_size"
            android:typeface="normal" />

    </LinearLayout>


</RelativeLayout>