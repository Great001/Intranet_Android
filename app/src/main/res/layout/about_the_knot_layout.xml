<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@color/c_about_theknot_bg"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/xogrp_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="@string/message_the_knot_version"
                android:textColor="@color/label_tip_color"
                android:textSize="@dimen/et_username_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/xogrp_core" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="@string/message_core_download"
                android:textColor="@color/label_tip_color"
                android:textSize="@dimen/et_username_text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_welcome_page"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="32dp"
            android:drawableRight="@drawable/icon_arrow_right"
            android:gravity="center_vertical"
            android:text="@string/message_welcome_page"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <include layout="@layout/line_divider_grey" />

        <TextView
            android:id="@+id/tv_check_new_versions"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="32dp"
            android:drawableRight="@drawable/icon_arrow_right"
            android:gravity="center_vertical"
            android:text="@string/message_check_new_versions"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <include layout="@layout/line_divider_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="center_horizontal"
        android:text="@string/message_the_knot_copyright"
        android:textColor="@color/label_tip_color"
        android:textSize="12sp" />

</RelativeLayout>